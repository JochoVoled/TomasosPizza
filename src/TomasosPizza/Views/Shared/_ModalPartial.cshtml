@model TomasosPizza.ViewModels.ModalViewModel

<div class="col-lg-4 col-lg-offset-4">
    <div class="tomasos-panel">
        <div>
            <a class="close" asp-controller="Admin" asp-action="CloseMatratt">&times;</a>
            <h4 class="modal-title">@Model.Title</h4>
        </div>
        <form asp-controller="Admin" asp-action="SaveMatratt" asp-route-model="@Model" method="post">
            <div class="form-group col-lg-12">
                <label class="col-lg-3" asp-for="@Model.Matratt.MatrattNamn">Namn</label>
                <div class="col-lg-9">
                    <input type="text" asp-for="@Model.Matratt.MatrattNamn" />
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3" asp-for="@Model.Matratt.Beskrivning">Beskrivning</label>
                <div class="col-lg-9">
                    <textarea asp-for="@Model.Matratt.Beskrivning"></textarea>
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3" asp-for="@Model.Matratt.Pris">Pris</label>
                <div class="col-lg-9">
                    <input type="number" asp-for="@Model.Matratt.Pris" />
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3" asp-for="@Model.Matratt.MatrattTyp">Kategori</label>
                <div class="col-lg-9">
                    <select asp-for="@Model.Matratt.MatrattTyp">
                        @foreach (var typ in @Model.Typer)
                        {
                            <option value="@typ.MatrattTyp1">@typ.Beskrivning</option>
                        }
                    </select>
                </div>
            </div>
            @foreach (var ingredient in Model.Produkter)
            {
                <div class="form-group col-lg-12">
                    <label class="control-label col-lg-8">@ingredient.ProduktNamn</label>
                    <div class="col-lg-1">
                        @if (@Model.Matratt.MatrattProdukt.Any(x => x.Produkt == ingredient))
                        {
                            <input class="checkbox-inline" type="checkbox" checked="checked" value="True" />
                        }
                        else
                        {
                            <input class="checkbox-inline" type="checkbox" value="false" />
                        }
                    </div>
                </div>
            }
            <div>
                <a class="btn btn-default" asp-controller="Admin" asp-action="CloseMatratt">Stäng</a>
                <input type="submit" asp-controller="Admin" asp-action="SaveMatratt" class="btn btn-info" value="OK" />
            </div>
        </form>
    </div>
</div>
