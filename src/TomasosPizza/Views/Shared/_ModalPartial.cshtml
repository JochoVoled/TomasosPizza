@model TomasosPizza.ViewModels.ModalViewModel

<div class="col-lg-4 col-lg-offset-4">
    <div class="tomasos-panel">
        <div>
            <a class="close" asp-controller="Admin" asp-action="CloseMatratt">&times;</a>
            <h4 class="modal-title">@Model.Title</h4>
        </div>
        <form asp-controller="Admin" asp-action="SaveMatratt" asp-route-model="@Model.Matratt" method="post">
            <div class="form-group col-lg-12">
                <label class="col-lg-3 tomasos-text" asp-for="Matratt.MatrattNamn">Namn*</label>
                <div class="col-lg-9">
                    <input type="text" required asp-for="Matratt.MatrattNamn" />
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3" asp-for="Matratt.Beskrivning">Beskrivning</label>
                <div class="col-lg-9">
                    <textarea asp-for="Matratt.Beskrivning">@Model.Matratt.Beskrivning</textarea>
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3 tomasos-text" asp-for="Matratt.Pris">Pris*</label>
                <div class="col-lg-9">
                    <input type="number" required asp-for="Matratt.Pris" value="@Model.Matratt.Pris" />
                </div>
            </div>
            <div class="form-group col-lg-12">
                <label class="col-lg-3 tomasos-text" asp-for="Matratt.MatrattTyp">Kategori*</label>
                <div class="col-lg-9">
                    <select asp-for="Matratt.MatrattTyp" required>
                        @foreach (var typ in @Model.Typer)
                        {
                            <option value="@typ.MatrattTyp1">@typ.Beskrivning</option>
                        }
                    </select>
                </div>
            </div>
