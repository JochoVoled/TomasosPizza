@model List<TomasosPizza.IdentityModels.IdentityKund>

<div id="userRoleManager" class="tomasos-panel">
    <h2 class="col-lg-offset-1">Användarbehörighet</h2>
    <form asp-controller="Admin" asp-action="UpdateUserRole" method="post"> @* asp-route="@Model" *@
        @foreach (var user in Model)
        {
            <div class="form-group col-lg-12">
                <label class="control-label col-lg-3" asp-for="@user.UserName">@user.UserName</label>
                <div class="col-lg-9">
                    @if (user.Roles.Any(x => x.RoleId == "1"))
                    {
                        <label class="radio-inline"><input type="radio" disabled="disabled" checked="checked" name="@user.UserName">Admin</label>
                        <label class="radio-inline"><input type="radio" disabled="disabled" name="@user.UserName">Regular</label>
                        <label class="radio-inline"><input type="radio" disabled="disabled" name="@user.UserName">Premium</label>
                    }
                    else if (user.Roles.Any(x => x.RoleId == "2"))
                    {
                        <label class="radio-inline"><input type="radio" name="@user.UserName">Admin</label>
                        <label class="radio-inline"><input type="radio" checked="checked" name="@user.UserName">Regular</label>
                        <label class="radio-inline"><input type="radio" name="@user.UserName">Premium</label>
                    }
                    else if (user.Roles.Any(x => x.RoleId == "3"))
                    {
                        <label class="radio-inline"><input type="radio" name="@user.UserName">Admin</label>
                        <label class="radio-inline"><input type="radio" name="@user.UserName">Regular</label>
                        <label class="radio-inline"><input type="radio" checked="checked" name="@user.UserName">Premium</label>
                    }
                    else
                    {
                        <span>Could not find user's role level</span>
                    }

                </div>
            </div>
        }
        <div class="form-group col-lg-offset-3 col-lg-2">
            <input type="submit" class="btn btn-default" value="Spara" />
        </div>
    </form>
</div>