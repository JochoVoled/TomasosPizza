@model TomasosPizza.ViewModels.ModalViewModel

<div id="ingredientList">
    @foreach (var ingredient in Model.Produkter)
            {
        <div class="form-group col-lg-12">
            <label class="control-label col-lg-8">@ingredient.ProduktNamn</label>
            <div class="col-lg-1">
                @* Ideally, the model would only send the correct link, but right now it just needs to work
                    @if (@Model.Matratt.MatrattProdukt.Any(x => x.Produkt == ingredient))
                {*@
                    <a asp-controller="Admin" asp-action="RemoveProductFromNewMatratt" asp-route-productId="@ingredient.ProduktId" asp-route-matrattId="@Model.Matratt.MatrattId">
                        @* data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#ingredientList" *@
                        Remove
                    </a>
                @*}
                else
                {*@
                    <a asp-controller="Admin" asp-action="AddProductToNewMatratt" asp-route-productId="@ingredient.ProduktId" asp-route-matrattId="@Model.Matratt.MatrattId">
                        @* data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#ingredientList" *@
                        Add
                    </a>
                @*}*@
            </div>
        </div>
    }
</div>
