@model TomasosPizza.ViewModels.MenuViewModel

@{
    string ingredients = "";
}

<div style="width: 100%">
    <div class="col-lg-6">
        <div class="tomasos-panel">
            <h1>På menyn</h1>
            <table class="table-responsive" style="width: 100%">
                @foreach (var product in @Model.Menu)
                {
                    <tr>
                        <td>
                            <p class="tomasos-text">@product.MatrattNamn (@product.MatrattTypNavigation.Beskrivning)</p>
                        </td>
                        <td>
                            <p class="tomasos-text align-right">@product.Pris :-</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p>@product.Beskrivning</p>
                            @{
                                ingredients = "";
                                foreach (var ingredient in product.MatrattProdukt)
                                {
                                    ingredients += ingredient.Produkt.ProduktNamn + " ";
                                }
                            }
                            <p>Innehåller @ingredients</p>
                        </td>
                        <td>
                            <span style="float: right"><a asp-controller="Order" asp-action="AddToOrder" asp-route-id="@product.MatrattId" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#cart"><input type="button" value="Beställ en"/></a></span>
                        </td>
                    </tr>
                    <tr></tr>
                }
            </table >
        </div>
    </div>
    <div class="col-lg-6" id="cart">
        <div class="tomasos-panel">
            <h1>Din beställning</h1>
            <p>Beställ något från menyn för att fylla på din beställning.</p>
        </div>
        
    </div>
</div>