@model TomasosPizza.ViewModels.LoginViewModel

<div > @* style="width: 100%" *@
    <div class="col-md-5 tomasos-panel">
        <h2>Logga in</h2>
        <form class="form-horizontal" asp-controller="User" asp-action="LogInAsync" asp-route-User="@Model" method="post">
            <div class="form-group">
                <label class="control-label col-sm-3 tomasos-text" asp-for="AnvandarNamn">Användarnamn</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" asp-for="AnvandarNamn" required/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3 tomasos-text" asp-for="Losenord">Lösenord</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="Losenord" maxlength="30" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                    <input class="btn btn-default" type="submit" Value="Logga in"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-5 tomasos-panel">
        @Html.Partial("RegisterView");
    </div>
</div>