@model TomasosPizza.Models.Kund
@{
    string confirm = "";
}

<h2>Registrera dig</h2>
<form class="form-horizontal" asp-controller="User" asp-action="CreateUserAsync" asp-route-User="@Model" asp-route-confirm="@confirm" method="post">
    <div class="col-lg-12">
        <h3 class="col-lg-12 h3">Kontouppgifter*</h3>
    </div>
    <div class="form-group">
        <label class="tomasos-text control-label col-lg-3" asp-for="AnvandarNamn">Användarnamn*</label>
        <div class="col-lg-8">
            <input class="form-control" asp-for="AnvandarNamn" required maxlength="20"/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="AnvandarNamn"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="tomasos-text control-label col-lg-3" asp-for="Namn">Namn*</label>
        <div class="col-lg-8">
            <input class="form-control" asp-for="Namn" pattern="^[a-zåäöA-ZÖÅÖ\s]+$" maxlength="100" required />
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Namn"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="tomasos-text col-lg-3 control-label" asp-for="Losenord">Lösenord*</label>
        <div class="col-lg-8">
            <input class="col-lg-8 form-control" asp-for="Losenord" type="password" required maxlength="20" />
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Losenord"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="tomasos-text col-lg-3 control-label" asp-for="Losenord">Upprepa lösenord*</label>
        <div class="col-lg-8">
            <input class="col-lg-8 form-control" asp-for="@confirm" type="password" required maxlength="20" />
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Losenord"></span>
        </div>
    </div>
    <div class="col-lg-12">
        <h3>Beställningsuppgifter*</h3>
    </div>
    <div class="form-group">
        <label class="tomasos-text col-lg-3 control-label" asp-for="Gatuadress">Adress*</label>
        <div class="col-lg-8">
            <input class="form-control" asp-for="Gatuadress" maxlength="20" required/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Gatuadress"></span>
        </div>
    </div>
    <div class="form-group">
            <label class="tomasos-text col-lg-3 control-label" asp-for="Postnr">Postnummer*</label>
        <div class="col-lg-8">
            <input class="form-control" asp-for="Postnr" maxlength="5" pattern="^\d{5}$" required/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Postnr"></span>
        </div>
    </div>
    <div class="form-group">
            <label class="tomasos-text col-lg-3 control-label" asp-for="Postort" class="tomasos-text">Postort*</label>
        <div class="col-lg-8">
            <input class="form-control" asp-for="Postort" maxlength="100" required/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Postort"></span>
        </div>
    </div>
    <div class="col-lg-12">
        <h3>Kontaktuppgifter</h3>
    </div>
    <div class="form-group">
        <label class="tomasos-text col-lg-3 control-label" asp-for="Email">E-mail</label>
        <div class="col-lg-8">
            <input class="col-lg-8 form-control" asp-for="Email" maxlength="50"/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="tomasos-text col-lg-3 control-label" asp-for="Telefon">Telefon</label>
        <div class="col-lg-8">
            <input class="col-lg-8 form-control" asp-for="Telefon" pattern="^\d+$" maxlength="50"/>
        </div>
        <div class="col-lg-12">
            <span class="form-control-feedback" asp-validation-for="Telefon"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-8">
            <input class="btn btn-default" type="submit" value="Registrera" />
        </div>
    </div>
