@model TomasosPizza.Models.Kund
@{
    string confirm = "";
}
<form asp-controller="User" asp-action="CreateUser" asp-route-User="@Model" asp-route-confirm="@confirm" method="post">
    <h3>Kontouppgifter</h3>
    <label asp-for="AnvandarNamn">Användarnamn*</label>
    <input asp-for="AnvandarNamn" required maxlength="20" />
    <br />
    <label asp-for="Namn">Namn*</label>
    <input asp-for="Namn" pattern="^[a-zåäöA-ZÖÅÖ\s]+$" maxlength="100" required />
    <br/>
    <label asp-for="Losenord">Lösenord*</label>
    <input asp-for="Losenord" type="password" required maxlength="20" />
    <br />
    <label asp-for="Losenord">Upprepa lösenord*</label>
    <input asp-for="@confirm" type="password" required maxlength="20" />
    <br />
    <br />
    <h3>Kontaktuppgifter</h3>
    <label asp-for="Email">E-mail</label>
    <input asp-for="AnvandarNamn" maxlength="50"/>
    <br />
    <label asp-for="Telefon">Telefon</label>
    <input asp-for="Telefon" pattern="^\d+$" maxlength="50"/>
    <br />
    <br />
    <h3>Beställningsuppgifter</h3>
    <label asp-for="Gatuadress">Adress</label>
    <input asp-for="Gatuadress" maxlength="20" />
    <br />
    <label asp-for="Postnr">Postnummer</label>
    <input asp-for="Postnr" maxlength="5" pattern="^\d{5}$" />
    <br />
    <label asp-for="Postort">Postort</label>
    <input asp-for="Postort" maxlength="100"/>
    <br />
    <br />
    <input type="submit" value="Registrera"/>
</form>