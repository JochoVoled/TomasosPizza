<div class="col-lg-3"></div>
<div class="col-lg-6">
    <div class="tomasos-panel">
        <form asp-controller="User" asp-action="AddAdress" method="post">
            <table>
                <tr>
                    <td><label>Gatuadress</label></td>
                    <td><input id="Gatuadress" name="Gatuadress" value="@Model.Gatuadress" /></td>
                </tr>
                <tr>
                    <td><label>Postnummer</label></td>
                    <td><input id="Postnr" name="Postnr" value="@Model.Postnr" /></td>
                </tr>
                <tr>
                    <td><label>Postort</label></td>
                    <td><input id="Postort" name="Postort" value="@Model.Postort" /></td>
                </tr>
                <tr>
                    <td><input type="submit" value="Spara Adress" /></td>
                    <td>
                        @*todo wishlist: Dynamically enable button when Adress is filled*@
                        <div id="CheckOut"></div>
                        @if (Model.Postort != null && Model.Postnr != null && Model.Gatuadress != null)
                        {
                            <a asp-controller="Order" asp-action="CheckOut"><input class="btn-success" type="button" value="Beställ" /></a>
                        }
                        else
                        {
                            <input class="disabled" type="button" value="Beställ" />
                        }
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div class="col-lg-3"></div>

<script>
    $.ready(function() {
        $("#Gatuadress").on("click", function ()
        {
            appendCheckOut();
        });
        $("#Postnr").on("click", function ()
        {
            appendCheckOut();
        });
        $("#Postort").on("click", function ()
        {
            appendCheckOut();
        });
        function adressFilled() {
            return !($("#Gatuadress").val() == null || $("#Postnr").val() == null || $("#Postort").val() == null);
        }

        function appendCheckOut() {
            if (adressFilled())
            {
                $("#CheckOut")
                    .append('<a asp-controller="Order" asp-action="CheckOut"><input class="btn-success" type="button" value="Beställ" /></a>');
            } else {
                $("#CheckOut")
                    .append('<input class="disabled" type="button" value="Beställ" />');
            }
        }
    });
</script>